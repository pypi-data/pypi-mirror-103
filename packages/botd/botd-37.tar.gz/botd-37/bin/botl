#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os, sys ; sys.path.insert(0, os.getcwd())

from botl.hdl import Client, cmd
from botl.nms import Names
from botl.obj import cfg
from botl.trm import exec
from botl.zzz import os, sys
from botd.tbl import tbl

__version__ = 37

class Console(Client):

    prompt = True

    def handle(self, e):
        super().handle(e)
        e.wait()

    def poll(self):
        if Console.prompt:
            return input("> ")

    def raw(self, txt):
        sys.stdout.write(txt)
        sys.stdout.write("\n")
        sys.stdout.flush()

def ver(event):
    event.reply("BOTL %s" % __version__)

def main():
    Names.tbl(tbl)
    cfg.name = "botl"
    cfg.version = __version__
    c = Console()
    c.boot()
    c.add("ver", ver)
    if cfg.txt:
        c.prompt = False
        e = c.event(cfg.otxt)
        cmd(c, e)
        e.wait()
        return
    if cfg.mods:
        c.start()
        c.init(cfg.mods)
        c.wait()

exec(main)

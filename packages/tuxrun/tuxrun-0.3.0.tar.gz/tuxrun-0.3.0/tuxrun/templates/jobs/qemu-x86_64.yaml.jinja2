{% extends 'base.jinja2' %}

{% block context %}
context:
  arch: "x86_64"
  no_kvm: true
  cpu: "qemu64"
  extra_options:
  - "-machine q35"
{% endblock %}

{% set arch = "x86_64" %}
{% set console = "ttyS0" %}
{% set rootfs_dev = "/dev/sda" %}
{% set rootfs_arg = "-drive file={rootfs},if=ide,format=raw" %}

{% set rootfs = rootfs|default("https://storage.tuxboot.com/x86_64/rootfs.ext4.zst", true) %}
